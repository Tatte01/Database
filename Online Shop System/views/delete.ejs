<%- include ("header", {title: title}); %>

<% res = res[0] %>
<form class="label-left" method="post" action="/delete">
    <fieldset>
        <legend>Delete Product</legend>

        <label for="id">Id</label>
        <input id="id" type="text" name="id" readonly value="<%= res.id %>">

        <label for="name">Name</label>
        <input id="name" type="text" name="name" value="<%= res.name %>">

        <label for="price">Price</label>
        <input id="price" type="number" name="price" value="<%= res.price %>">

        <input type="submit" name="doit" value="Delete">
    </fieldset>
</form>

<%- include ("footer"); %>