<%- include("header", { title: title }); %>

<h1>Orders</h1>
<p> Its limited to the newest 20 to not cluter the page</p>
<table border="1">
    <tr>
        <th>Order ID</th>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Status Time</th>
        <th>Status</th>
        <th>Diffrent Items</th>
        <th>Picklist</th>
    </tr>
    <% if (orders && orders.length > 0) { %>
        <% for (const order of orders) { %>
        <tr>
            <td><a href="/orderdetails/<%= order.order_id %>">
                <%= order.order_id %></a></td>

            <td><%= order.customer_id %></td>
            <td><%= order.customer_name %></td>
            <td><%= order.status_time %></td>
            <td><%= order.status %></td>
            <td><%= order.order_items_count%></td>
            <td>
                <a href="/picklist/<%= order.order_id %>">
                    <i class="fa-solid fa-cart-shopping"></i>
                </a>
            </td>
        </tr>
        <% } %>
    <% } else { %>
        <tr>
            <td colspan="5">No orders found.</td>
        </tr>
    <% } %>
</table>

<%- include("footer"); %>
